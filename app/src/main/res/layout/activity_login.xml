<!--            app:menu="@menu/bottom_navigation_bar"-->
<!--            android:background="@drawable/rounded_corner"-->
<!--            app:itemTextColor="#0C0C0C"-->
<!--            />-->
    </LinearLayout>

</RelativeLayout>
